            //                    i.fa.fa-lock
            //                    p Secure payments
            //            .col-sm-3
            //                .single-promo.promo4
            //                    i.fa.fa-gift
            //                    p Surprising Gift
            .footer-widget
                .container
                    .row
                        .col-sm-2
                            .companyinfo
                                h2
                                    span Cilla
                                p
                                    | Cilla is your one-stop shop for all your handmade needs
                        .col-sm-2
                            .single-widget
                                h2 Media
                                ul.nav.nav-pills.nav-stacked
                                    li
                                        a(href='#')
                                            i.fa.fa-facebook
                                            | Facebook
                                    li
                                        a(href='#')
                                            i.fa.fa-twitter
                                            | Twitter
                                    li
                                        a(href='#')
                                            i.fa.fa-instagram
                                            | Instagram
                                    li
                                        a(href='#')
                                            i.fa.fa-youtube
                                            | Youtube
                        
                        .col-sm-3.col-sm-offset-1
                            .single-widget
                                h2 NewsLetter
                                form.searchform(action='/subscribe', method='POST')
                                    input(type='text', name='email', placeholder='Your email address')
                                    button.btn.btn-default(type='submit')
                                        i.fa.fa-arrow-circle-o-right
                                    p
                                        | Get the most recent updates, exclusive deals
                                        | you wont find anywhere else straight to your
                                        | inbox and be updated your self...
